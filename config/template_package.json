{
  "name": "suitecloud-project",
  "version": "1.0.0",
  "scripts": {
    "test": "jest --config test/jest.config.json",
    "postinstall": "copyfiles -u 3 -V -a \"./node_modules/netsuite-libs/config/*\" \"./\"",
    "lint": "eslint -c .eslintrc.js --ext .ts ./",
    "lint-fix": "eslint --fix -c .eslintrc.js --ext .ts ./",
    "prettier-all": "prettier --write ."
  },
  "devDependencies": {
    "netsuite-fasttrack-toolkit-ss2": "6.2.0",
    "@hitc/netsuite-types": "2020.2.16",
    "@oracle/suitecloud-unit-testing": "1.1.3",
    "fancy-log": "1.3.3",
    "gulp": "4.0.2",
    "gulp-clean": "0.4.0",
    "gulp-replace": "1.1.3",
    "gulp-typescript": "6.0.0-alpha.1",
    "jest": "26.4.2",
    "ts-node": "10.1.0",
    "typescript": "4.3.4",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "eslint": "7.30.0",
    "eslint-config-prettier": "8.3.0",
    "husky": "4.3.8",
    "lint-staged": "11.0.0",
    "prettier": "2.3.2"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "gulp-git": "2.10.1",
    "moment": "2.29.1",
    "netsuite-libs": "git+ssh://git@bitbucket.org/synebo/netsuite-libs.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}

